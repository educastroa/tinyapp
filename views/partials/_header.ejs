<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user) { %>
        <form class="center" action="/login" method="POST">
        <div>
          <input class="center" type="email" name="email" placeholder="Email" style="width: 300px">
          <input class="center" type="password" name="password" placeholder="Password" style="width: 150px">
          <button type="submit" class="center">Login</button>
          </div>
      </form>
      <form action="/register"><button type="submit">Register</button></form>
      <% } else { %>
      <form class="center" action="/logout" method="POST">
        <div>
          Welcome back, <%= user.email %>. 
          <button type="submit" class="center">Logout</button>
        </div>
      </form>
      <% } %>
      </nav>
</header>